<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Checklist.Button" parent="AppTheme">
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="Widget.Checklist.Button.TextAppearance" parent="Widget.Checklist.Button">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>